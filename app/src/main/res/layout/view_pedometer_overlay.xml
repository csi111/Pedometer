<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/overlayview_width"
    android:layout_height="@dimen/overlayview_height"
    android:background="@color/colorOverlayViewBackground"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/overlay_icon_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:scaleType="center"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/overlay_step_count_textview"
        style="@style/AppTheme.PenometerBigTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/overlay_icon_imageview"
        android:gravity="right" />

    <TextView
        android:id="@+id/overlay_distance_textview"
        style="@style/AppTheme.PenometerLittleBigTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/overlay_step_count_textview"
        android:layout_toRightOf="@+id/overlay_icon_imageview"
        android:gravity="right" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/overlayview_width"
    android:layout_height="@dimen/overlayview_height"
    android:background="@color/colorMainTabText"
    android:orientation="vertical">

    <TextView
        android:id="@+id/overlay_step_count_textview"
        style="@style/AppTheme.PenometerBigTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="@string/action_penometer_start" />

    <TextView
        android:id="@+id/overlay_distance_textview"
        style="@style/AppTheme.PenometerLittleBigTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/overlay_step_count_textview"
        android:gravity="right"
        android:text="@string/action_penometer_start" />


</RelativeLayout>